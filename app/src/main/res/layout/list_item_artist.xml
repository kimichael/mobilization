<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:id="@+id/artist_view"
    android:layout_gravity="center_vertical"
    android:padding="15dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/artist_cover_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/artist_cover_image"
        android:layout_alignTop="@id/artist_cover_image"
        android:id="@+id/name"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/artist_cover_image"
        android:layout_below="@id/name"
        android:id="@+id/genres"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/artist_cover_image"
        android:layout_alignBottom="@id/artist_cover_image"
        android:id="@+id/album_track_count"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>